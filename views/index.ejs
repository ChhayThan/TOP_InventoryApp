<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="reset.css" />
    <link rel="stylesheet" href="global.css" />
  </head>
  <body>
    <%- include('./partials/navBar') %> <%- include('./partials/sideBar.ejs') %>

    <div class="content">
      <h1>All Categories</h1>
      <div class="itemsContainer">
        <% if (items.length > 0) { %> <% items.forEach((item) => { %>
        <div class="item">
          <img src="<%= item.part_imageUrl %>" alt="<%= item.part_name %>" />
          <h1 class="item_title"><%= item.part_name %></h1>
          <h2 class="item_price"><%= item.part_price %></h2>
          <h2 class="item_qty">Qty: <%= item.part_quantity %></h2>
          <a href="/item/<%= item.id %>">View Details</a>
        </div>
        <% }) %> <% } else { %>
        <p>No items available.</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
