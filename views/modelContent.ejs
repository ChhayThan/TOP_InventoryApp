<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body>
    <%- include('./partials/navBar') %> <%- include('./partials/sideBar.ejs') %>

    <div class="content">
      <h1>Models</h1>
      <div class="modelsContainer">
        <% if (models.length > 0) { %> <% models.forEach((model) => { %>
        <div class="model">
          <div class="modelImg">
            <img
              src="<%= model.model_imageUrl %>"
              alt="<%= model.model_name %>"
            />
          </div>
          <h1 class="model_title"><%= model.model_name %></h1>
          <h2 class="model_vehicle_type"><%= model.model_vehicle_type %></h2>
          <div class="modelBtns">
            <a href="/model/<%= model.id %>" class="viewBtn"
              >View Parts for this Model</a
            >
            <a class="editModelBtn" href="/form/edit/car_models/<%= model.id %>"
              >Edit</a
            >
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="empty">
          <p>No items available.</p>
          <a href="/form/add/car_models" class="addModel">Add Car Model</a>
          <form action="/delete/brand/<%= locals.brand_id %>" method="POST">
            <input
              type="password"
              name="adminPassword"
              id="adminPassword"
              placeholder="Admin Password"
            />
            <button type="submit" class="deleteModel">Delete Brand</button>
          </form>
        </div>

        <% } %>
      </div>
    </div>
  </body>
</html>
