<a href="/">Back Home</a>
<form action="<%= locals.edit ? `/form/edit/part/${locals.item_info.id}` : `/form/${locals.model.id}/add/car_part` %>"
  method="POST">
  <label for="part_name">
    Part Name:
    <input
      type="text"
      name="part_name"
      id="part_name"
      value="<%= locals.item_info.part_name %>"
      required
    />
  </label>
  <label for="brand_id">
    Brand:
    <% if (locals.edit)  { %>
      <select name="brand_id" id="brand_name">
      <% brand_categories.forEach((brand) => { %>
      <option value="<%= brand.brand_id %>"
      <% if (locals.item_info.brand_id === brand.brand_id) { %>
        selected
      <% } %>
      ><%= brand.brand_name %></option>
      <% }) %>
    </select>
    <%} else { %>
      <input type="text" name="brand_id" id="brand_id" value="<%= locals.brand_name %>" disabled>
    <%}%>
    
  </label>
  <label for="model_id">
    Model:
    <% if (locals.edit) { %>
      <select name="model_id" id="model_id">
      <% model_names.forEach((model) => { %>
      <option value="<%= model.id %>"><%= model.model_name %></option>
      <% }) %>
    </select>
    <% } else { %>
      <select name="model_id" id="model_id" disabled>
        <option value="<%= locals.model.id %>"><%= model.model_name %></option>
      </select>
    <%}%>
    
  </label>
  <label for="part_imageUrl">
    Part Image-Url:
    <input
      type="url"
      name="part_imageUrl"
      id="part_imageUrl"
      value="<%= locals.item_info.part_imageurl %>"
      required
    />
  </label>
  <label for="part_price">
    Price: $
    <input
      type="number"
      name="part_price"
      id="part_price"
      value="<%= locals.item_info.part_price %>"
      required
    />
  </label>
  <label for="part_description" id="part_description"> Description: </label>
  <textarea name="part_description" id="part_description">
<%= item_info.part_description %>
</textarea
  >
  <label for="part_quantity">
    Quantity:
    <input
      type="number"
      name="part_quantity"
      id="part_quantity"
      value="<%= locals.item_info.part_quantity %>"
      required
    />
  </label>
  <label for="part_oem">
    OEM:
    <input type="checkbox" name="part_oem" id="part_oem" 
    <% if (locals.item_info.oem) {%>
        checked="true"
    <%}%>
    />
  </label>
  <% if (locals.edit) { %>
    <label for="adminPassword">
    Admin Password:
    <input type="password" name="adminPassword" id="adminPassword"/>
  </label>
  <% } %>
  

  <button type="submit" id="editSubmitBtn"><%= locals.edit ? "Confirm Edit" : "Add item" %></button>
</form>
